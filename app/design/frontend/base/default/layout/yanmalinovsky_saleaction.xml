<layout version="0.1.0">
    <yanmalinovsky_saleaction_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="yanmalinovsky_saleaction/list" template="catalog/product/list.phtml"></block>
        </reference>
    </yanmalinovsky_saleaction_index_index>
    <default>
        <reference name="top.links">
            <action method="addLink">
                <label>Sale Action</label>
                <url>saleaction</url>
                <title>Sale Action</title>
            </action>
        </reference>
    </default>
</layout>


